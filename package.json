{
  "name": "leakspector",
  "version": "0.0.0",
  "description": "A Node.js library for detecting memory leaks. Track resources at the start of each test and verify they're cleaned up at the end.",
  "type": "module",
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.mjs",
      "require": "./dist/cjs/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "prettier --check . && eslint .",
    "lint:fix": "prettier --write . && eslint --fix .",
    "test": "vitest",
    "build": "tsdown",
    "dev": "tsdown --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "memory-leak",
    "leak-detection",
    "testing",
    "test-utilities",
    "event-emitter",
    "event-listener",
    "vitest",
    "jest",
    "resource-tracking",
    "cleanup",
    "test-helpers"
  ],
  "author": "Charles Francoise",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/loderunner/leakspector.git"
  },
  "homepage": "https://github.com/loderunner/leakspector#readme",
  "bugs": {
    "url": "https://github.com/loderunner/leakspector/issues"
  },
  "packageManager": "pnpm@10.18.0",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.0",
    "@vitest/eslint-plugin": "^1.4.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^61.1.12",
    "globals": "^16.5.0",
    "prettier": "^3.6.2",
    "tsdown": "^0.16.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "vitest": "^4.0.8"
  }
}
